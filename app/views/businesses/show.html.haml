%h2= @business.name
%h4= review_star_string(@business.rating)
%h4
  %span.tag.tag-default= @business.review_count
  = plural_word_by_count(@business.review_count, 'review') 

.list-group
  .container
    - @business.reviews.each do |review| 
      .row.card.card-outline-info
        .col-md-3
          %h5
            = link_to "#{review.user.full_name}", user_path(review.user)
          %span.tag.tag-default= review.user.review_count
          = plural_word_by_count(review.user.review_count, 'review') 
        .col-md-9
          %h5 
            = review_star_string(review.rating)
            %small.text-muted= short_date(review.created_at)
          = review.description
