= form_for @user do |f|  
  .form-container
    .form-group.row.has-danger
      = f.label :first_name, class: 'col-xs-2 col-form-label'
      .col-xs-4
        = f.text_field :first_name, { class: 'form-control form-control-danger', placeholder: "Kate" }
        .form-control-feedback Can't be blank
    .form-group.row.has-danger
      = f.label :last_name, class: 'col-xs-2 col-form-label'
      .col-xs-4
        = f.text_field :last_name, { class: 'form-control form-control-danger', placeholder: "Doe" }
        .form-control-feedback Can't be blank
    .form-group.row.has-danger
      = f.label :email, class: 'col-xs-2 col-form-label'
      .col-xs-4
        = f.text_field :email, { class: 'form-control form-control-danger', placeholder: "user@gmail.com" }
        .form-control-feedback Can't be blank
    .form-group.row.has-danger
      = f.label :password, class: 'col-xs-2 col-form-label'
      .col-xs-4
        = f.password_field :email, { class: 'form-control form-control-danger', placeholder: "hard-to-guess-word" }
        .form-control-feedback Can't be blank

    .form-group.row
      %button.btn.btn-info{:type => "submit"} Sing Up
