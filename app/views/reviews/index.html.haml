.row
  .list-group.col-md-2
    %a.list-group-item.active{:href => "#"} Recent Reviews
    %a.list-group-item{:href => "#"} Restaurant
    %a.list-group-item{:href => "#"} Art and Entertainment
    %a.list-group-item{:href => "#"} Education
    %a.list-group-item{:href => "#"} Food
    %a.list-group-item{:href => "#"} Schools

  .col-md-10
    %ul.list-group
      - @reviews.each do |review|
        %li.list-group-item 
          %h3 
            = link_to "#{review.business.name}", business_path(review.business)
          %h6= review_star_string(review.rating)
          %p= review.description


    %nav{"aria-label" => "..."}
      %ul.pagination
        %li.page-item.disabled
          %a.page-link{"aria-label" => "Previous", :href => "#", :tabindex => "-1"}
            %span{"aria-hidden" => "true"} «
            %span.sr-only Previous
        %li.page-item.active
          %a.page-link{:href => "#"}
            1
            %span.sr-only (current)
        %li.page-item
          %a.page-link{:href => "#"} 2
        %li.page-item
          %a.page-link{:href => "#"} 3
        %li.page-item
          %a.page-link{:href => "#"} 4
        %li.page-item
          %a.page-link{:href => "#"} 5
        %li.page-item
          %a.page-link{"aria-label" => "Next", :href => "#"}
            %span{"aria-hidden" => "true"} »
            %span.sr-only Next
